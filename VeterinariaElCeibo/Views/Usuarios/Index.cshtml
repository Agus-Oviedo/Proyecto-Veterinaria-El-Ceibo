@model IEnumerable<VeterinariaElCeibo.Models.UsuarioRolesViewModel>

@{
    ViewData["Title"] = "Usuarios del sistema";
}

<h1>Usuarios del sistema</h1>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>Nombre</th>
            <th>Roles</th>
            <th style="width: 150px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No hay usuarios registrados.
                </td>
            </tr>
        }
        else
        {
            foreach (var u in Model)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@u.NombreCompleto</td>
                    <td>
                        @if (u.Roles != null && u.Roles.Any())
                        {
                            @string.Join(", ", u.Roles)
                        }
                        else
                        {
                            <span class="text-muted">Sin rol asignado</span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditarRoles"
                           asp-route-id="@u.UserId"
                           class="btn btn-sm btn-primary">
                            Editar roles
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="Home"
       asp-action="Index"
       class="ceibo-back-pill">
        <span class="ceibo-back-pill-icon">←</span>
        Volver al inicio
    </a>
</div>

@model VeterinariaElCeibo.ViewModels.PlanSanitarioViewModel

@{
    ViewData["Title"] = "Libreta sanitaria";

    var mascota = Model.Mascota;
    var tutor = mascota?.Cliente;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Libreta sanitaria</h2>

        @if (mascota != null)
        {
            <p class="text-muted mb-0">
                Mascota: <strong>@mascota.NombreMascota</strong>
                (@mascota.Especie @if (!string.IsNullOrWhiteSpace(mascota.Raza)) {
                @($"- {mascota.Raza}")
            }
)
        </p>

        @if (tutor != null)
        {
            <p class="text-muted mb-0">
                Tutor: <strong>@tutor.Nombre @tutor.Apellido</strong>
            </p>
        }
                }
    </div>

    @if (tutor != null)
    {
        <a asp-controller="Mascotas"
           asp-action="Index"
           asp-route-clienteId="@tutor.Id"
           class="btn btn-outline-secondary">
            ← Volver a mascotas de @tutor.Nombre
        </a>
    }
</div>

<div class="row g-4">
    <!-- VACUNACIONES -->
    <div class="col-12 col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">Vacunaciones</h5>
                    <small class="text-muted">Registro de vacunas aplicadas.</small>
                </div>

                <a asp-action="CreateVacuna"
                   asp-route-mascotaId="@mascota.Id"
                   class="btn btn-sm ceibo-btn-primary">
                    + Nueva vacuna
                </a>
            </div>

            <div class="card-body">
                @if (Model.Vacunaciones == null || !Model.Vacunaciones.Any())
                {
                    <div class="alert alert-info mb-0">
                        Todavía no hay vacunas registradas para esta mascota.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Vacuna</th>
                                    <th>Veterinario</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.Vacunaciones)
                                {
                                    <tr>
                                        <td>@v.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td>@v.Vacuna</td>
                                        <td>
                                            @if (v.Veterinario != null)
                                            {
                                                @($"{v.Veterinario.Nombre} {v.Veterinario.Apellido}")
                                            }
                                            else
                                            {
                                                @("-")
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="EditVacuna"
                                               asp-route-id="@v.Id"
                                               class="btn btn-sm btn-outline-secondary me-1">
                                                Editar
                                            </a>

                                            <form asp-action="DeleteVacuna"
                                                  asp-route-id="@v.Id"
                                                  method="post"
                                                  class="d-inline form-delete-vacuna">
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger btn-delete-vacuna"
                                                        data-fecha="@v.Fecha.ToString("dd/MM/yyyy")"
                                                        data-vacuna="@v.Vacuna">
                                                    Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- DESPARASITACIONES -->
    <div class="col-12 col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">Desparasitaciones</h5>
                    <small class="text-muted">Registro de desparasitaciones.</small>
                </div>

                <a asp-action="CreateDesparasitacion"
                   asp-route-mascotaId="@mascota.Id"
                   class="btn btn-sm ceibo-btn-primary">
                    + Nueva desparasitación
                </a>
            </div>

            <div class="card-body">
                @if (Model.Desparasitaciones == null || !Model.Desparasitaciones.Any())
                {
                    <div class="alert alert-info mb-0">
                        Todavía no hay desparasitaciones registradas para esta mascota.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Producto</th>
                                    <th>Veterinario</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.Desparasitaciones)
                                {
                                    <tr>
                                        <td>@d.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td>@d.Producto</td>
                                        <td>
                                            @if (d.Veterinario != null)
                                            {
                                                @($"{d.Veterinario.Nombre} {d.Veterinario.Apellido}")
                                            }
                                            else
                                            {
                                                @("-")
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="EditDesparasitacion"
                                               asp-route-id="@d.Id"
                                               class="btn btn-sm btn-outline-secondary me-1">
                                                Editar
                                            </a>

                                            <form asp-action="DeleteDesparasitacion"
                                                  asp-route-id="@d.Id"
                                                  method="post"
                                                  class="d-inline form-delete-despara">
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger btn-delete-despara"
                                                        data-fecha="@d.Fecha.ToString("dd/MM/yyyy")"
                                                        data-producto="@d.Producto">
                                                    Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Vacunas
            document.querySelectorAll('.btn-delete-vacuna').forEach(btn => {
                btn.addEventListener('click', function () {
                    const form = this.closest('form');
                    const fecha = this.dataset.fecha || '';
                    const vacuna = this.dataset.vacuna || '';

                    Swal.fire({
                        title: '¿Eliminar vacuna?',
                        text: `Se va a eliminar la vacuna "${vacuna}" aplicada el ${fecha}. Esta acción no se puede deshacer.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });

            // Desparasitaciones
            document.querySelectorAll('.btn-delete-despara').forEach(btn => {
                btn.addEventListener('click', function () {
                    const form = this.closest('form');
                    const fecha = this.dataset.fecha || '';
                    const producto = this.dataset.producto || '';

                    Swal.fire({
                        title: '¿Eliminar desparasitación?',
                        text: `Se va a eliminar la desparasitación "${producto}" aplicada el ${fecha}. Esta acción no se puede deshacer.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}
